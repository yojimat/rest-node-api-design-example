{
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "baseUrl": "./src",
        "strict": true,
        "noImplicitAny": true,
        "target": "ESNext",
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "incremental": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "express"
        ]
    },
    "ts-node": {
        "esm": true,
        "files": true,
    }
}